{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": [
      "./pages/**/*.*",
      "./components/**/*.*",
      "./lib/**/*.*",
      "./hooks/**/*.*",
      "./types/**/*.*",
      "./utils/**/*.*"
    ],
    "exclude": "**/node_modules/**/*.*",
    "out": "TS-docs"
  }
}
